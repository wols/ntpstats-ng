input {
    file {
        path => [ "/var/log/ntp/ntp.log" ]
        type => "syslog-ntp"
    }
}

filter {}

output {
    if [type] == "syslog-ntp" {
        file {
            path => "/tmp/ntpstats-ng-%{+YYYYMMdd}.json"
        }
    }
}

